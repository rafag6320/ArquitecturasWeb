<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
<persistence-unit name="integrador2" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>integrador2.Entities.Carrera</class>
    <class>integrador2.Entities.Matricula</class>
    <class>integrador2.Entities.Estudiante</class>
    <properties>
        <!-- Datos de conexión -->
        <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/integrador2"/>
        <property name="jakarta.persistence.jdbc.user" value="root"/>
        <property name="jakarta.persistence.jdbc.password" value=""/>
        <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

        <!-- Configuración de Hibernate -->
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>
    </properties>
</persistence-unit>
</persistence>
